@model AzureB2BInvite.Models.RedemptionSettings
@{
    string prefix = ViewBag.RedemptionPropertyName;
}
<div class="panel panel-info">
    <div class="panel-title panel-heading">
        Verification Settings - @ViewBag.Title
    </div>
    <div class="panel-body redemption">
        <div class="form-horizontal">
            <div class="form-group">
                <div class="col-md-6">
                    @Html.LabelFor(model => model.InviterResponseEmailAddr, htmlAttributes: new { @class = "control-label addHelp" })
                    @Html.EditorFor(model => model.InviterResponseEmailAddr, null, prefix + ".InviterResponseEmailAddr", new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.InviterResponseEmailAddr, "", new { @class = "text-danger" })
                    <div class="notes">
                        Return email address used in invitations and other places throughout the site.
                    </div>
                </div>
                <div class="col-md-6">
                    @Html.LabelFor(model => model.InviteRedirectUrl, htmlAttributes: new { @class = "control-label addHelp" })
                    @Html.EditorFor(model => model.InviteRedirectUrl, null, prefix + ".InviteRedirectUrl", new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.InviteRedirectUrl, "", new { @class = "text-danger" })
                    <div class="notes">
                        After users are approved and click the email link to begin the acceptance process, they are brought to the portal
                        to edit their default profile. From there, they will be taken to the link specified here.
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-addon">
                            @Html.EditorFor(model => model.RequirePreauth, null, prefix + ".RequirePreauth")
                        </span>
                        <span class="form-control">
                            <label class="control-label addHelp" for="@(prefix)_RequirePreauth">@Html.DisplayNameFor(model => model.RequirePreauth)</label>
                        </span>
                        <div class="notes">
                            If checked, users will only be able to submit an invitation request after authenticating
                            to their home Azure Active Directory tenant. Enabling this will BLOCK non-Azure AD organizations from requesting access.
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

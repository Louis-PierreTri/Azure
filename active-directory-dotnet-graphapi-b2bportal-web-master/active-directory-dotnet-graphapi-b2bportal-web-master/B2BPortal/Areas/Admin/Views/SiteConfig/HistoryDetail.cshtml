@model B2BPortal.Models.SiteConfig
@{
    ViewBag.Title = "Details";
}
<h2>Details</h2>
<div>
    <h4>Site Config - @Model.ConfigDate</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.SiteName)</dt>
        <dd>@Html.DisplayFor(model => model.SiteName)</dd>

        <dt>@Html.DisplayNameFor(model => model.WelcomeMessage)</dt>
        <dd>@Html.DisplayFor(model => model.WelcomeMessage)</dd>

        <dt>@Html.DisplayNameFor(model => model.SiteRedemptionSettings.RequirePreauth)</dt>
        <dd>@Html.DisplayFor(model => model.SiteRedemptionSettings.RequirePreauth)</dd>

        <dt>@Html.DisplayNameFor(model => model.RequireTOSAgreement)</dt>
        <dd>@Html.DisplayFor(model => model.RequireTOSAgreement)</dd>

        <dt>@Html.DisplayNameFor(model => model.TOSDocument)</dt>
        <dd>@Html.DisplayFor(model => model.TOSDocument)</dd>
    </dl>
    <hr />

    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.ConfigVersion)</dt>
        <dd>@Html.DisplayFor(model => model.ConfigVersion)</dd>

        <dt>@Html.DisplayNameFor(model => model.ConfigAuthor)</dt>
        <dd>@Html.DisplayFor(model => model.ConfigAuthor)</dd>

        <dt>@Html.DisplayNameFor(model => model.ConfigDate)</dt>
        <dd>@Html.DisplayFor(model => model.ConfigDate)</dd>
    </dl>
</div>

<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        @Html.ActionLink("Make Current", "Edit", new { area = "admin", id = Model.Id }, new { @class = "btn btn-default" })
        @Html.ActionLink("View History", "List", new { area = "admin" }, new { @class = "btn btn-default" })
    </div>
</div>

